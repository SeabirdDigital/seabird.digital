---
import "./Layout.css"
import { SEO } from "astro-seo";
import Load from "./components/Load.astro";
import Header from "./Sections/General/Header.astro";

type Props = {
	overlayHeader?: boolean
}

const { overlayHeader } = Astro.props
---

<html class="motion-safe:scroll-smooth" lang="sv">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/assets/blob.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<SEO
		  	title="Seabird Digital | Modern webbdesign till ett bra pris nära Göteborg"
		  	description="Att se bra ut online ska inte kosta en förmögenhet. Vi är en webbyrå som skapar moderna hemsidor till ett bra pris"
			openGraph={{
				basic: {
					image: "https://seabird.digital/assets/og.png",
					title: "En webbyrå som skapar moderna sidor utan att skada din plånbok",
					type: "website"
				},
				optional: {
					locale: "sv-SE",
					siteName: "Seabird Digital",
					description: "Att se bra ut online ska inte kosta en förmögenhet. Kontakta oss idag för att få eran nya makeover!"
				},
				image: {
					alt: "Screenshot of Seabird Digitals website",
					height: 630,
					width: 1200,
					type: "image/png",
					url: "https://seabird.digital/assets/og.png",
					secureUrl: "https://seabird.digital/assets/og.png",
				}
			}}
			twitter={{
				card: "summary_large_image"
			}}
		/>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,400;0,700;1,400;1,700&family=Paytone+One&family=Anonymous+Pro:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<Load />
		<Header overlay={overlayHeader} />
		<slot/>
	</body>
</html>

<style is:global>
	:root {
		--sb-blue: #00BBF9;
		--sb-purple: #9B5DE5;
		--sb-pink: #FF1CB2;
		--sb-yellow: #FEE440;

		--sb-paytone: 'Paytone One', sans-serif;
		--sb-mulish: 'Mulish', sans-serif;
		--sb-specify: 'Specify ExExp', sans-serif;
	}

	h1, h2, h3, h4, h5, h6 {
		@apply
			font-paytone
			leading-4;
	}
	
	h1 {
		@apply
			text-3xl md:text-5xl lg:text-6xl;
	}

	h2 {
		@apply
			text-2xl md:text-3xl lg:text-4xl;
	}

	h3 {
		@apply
			text-2xl md:text-2xl lg:text-3xl;
	}
	
	p {
		@apply
			text-base
			font-mulish
			font-bold;
	}
</style>